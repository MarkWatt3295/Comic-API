<Window x:Class="Comic_API.SunInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Comic_API"
        mc:Ignorable="d"
        Title="SunInfo" Height="243" Width="542" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <StackPanel>
        <Button x:Name="SunInfo_Button" Content="View Sun Rise / Sun Set" HorizontalAlignment="Center" Padding="20" Margin="20" FontSize="24" Click="SunInfo_Button_Click"/>
            <TextBlock x:Name="sunRiseText" Margin="20"></TextBlock>
            <TextBlock x:Name="sunSetText" Margin="20"></TextBlock>

        </StackPanel>
    </Grid>
</Window>
